<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:color/transparent" />

        <TextView
            android:id="@+id/name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_edit_text_cut"
            android:enabled="false"
            android:gravity="center"
            android:text="Firstname Lastname" />

        <TextView
            android:id="@+id/major_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Major:" />

        <EditText
            android:id="@+id/major_field"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_edit_text_cut"
            android:enabled="false"
            android:gravity="center"
            android:text="Major" />

        <TextView
            android:id="@+id/year_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year:" />

        <EditText
            android:id="@+id/year_field"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_edit_text_cut"
            android:enabled="false"
            android:gravity="center"
            android:text="Year" />

        <TextView
            android:id="@+id/birthdate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthdate:" />

        <EditText
            android:id="@+id/birthdate_field"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_edit_text_cut"
            android:enabled="false"
            android:gravity="center"
            android:inputType="date"
            android:text="03/01/2001" />
    </LinearLayout>
</ScrollView>